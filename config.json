{
	"name": "Radomizer Overide",

	"namespace": "Stanford\\RandomizerOveride",

	"description": "EM that allows manual setting of fields that draw values from Randomized Allocation Tables",

	"documentation": "README.md",

	"authors": [
		{
			"name": "Andrew Martin",
			"email": "andy123@stanford.edu",
			"institution": "Stanford University"
		},
		{
			"name": "Irvin Szeto",
			"email": "irvins@stanford.edu",
			"institution": "Stanford University"
		}
	],

	"permissions": [
		"redcap_data_entry_form_top",
		"redcap_save_record",
		"redcap_module_link_check_display"
	],
	
	"framework-version": 4,

	"enable-every-page-hooks-on-system-pages": false,	

	"links": {
		"project": [
			{
		        "name": "Log of Manual Randomization Overides",
		        "icon": "brick",
		        "url": "pages/manual_log.php",
		        "show-header-and-footer": false
			 }
		],
		"control-center": [
		]
	},

	"no-auth-pages": [
      "ajax/handler"
	],
	
	"project-settings": [
		{
			"key": "override-user-list",
			"name": "<b>Allowed Users List</b> <br>Comma seperated list of [Userids] who are allowed to manually overide randomization fields",
			"required": false,
			"type": "text"
		},
		{
			"key": "enable-project-debug-logging",
			"name": "<b>Enable Debug Logging</b><br><i>(optional)</i> Requires installation and configuration of emLogger",
			"required": false,
			"type": "checkbox"
		}
	],


	"system-settings": [
		{
			"key": "enable-system-debug-logging",
			"name": "<b>Enable Debug Logging (system-wide)</b><i>(optional)</i> Requires installation and configuration of emLogger",
			"required": false,
			"type": "checkbox"
		}
	],

	"compatibility": {
		"php-version-min": "",
		"php-version-max": "",
		"redcap-version-min": "",
		"redcap-version-max": ""
	}
}
